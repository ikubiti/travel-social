<!--Main Content-->
<!-- Main Body Container -->

<div class='w-full h-auto py-16 px-2 sm:shadow-sm'>
  <div class='block lg:flex px-2'>
    <!-- Profile Image Div -->
    <div
      id='avatar'
      class='break-after-column md:justify w-20 pb-0 sm:pb-0 mr-2'
    >
      <img
        src='{{profile_image}}'
        class='rounded-full shadow-lg sm:w-20 md:w-40 lg:w-40 border-4 border-green-900'
        alt='{{image_name}}'
      />
      <h2 class='text-lime-500 text-font-bold'>{{name}}</h2>
    </div>
    <!-- Container for All the Trip Cards -->
    <div class='w-full'>
      <div
        id='trips-container'
        class='flex flex-col space-y-3 border-4 rounded border-green-900 bg-gradient-to-t from-lime-100 via-stone-200 to-stone-200'
      >
        {{#if trips.length}}
          {{#each trips as |trip|}}

            <div
              id='trip-card'
              class='flex flex-col lg:flex-row border-y-4 border-green-900'
            >
              <figure id='trip-photo' class='flex w-full float-left'>

                <a href='/trips/{{trip.id}}'>
                  <img
                    src='{{getImage trip.images}}'
                    class='sm:rounded-none'
                    alt='Trip Photo of {{trip.name}}'
                  />
                </a>

              </figure>
              <div
                id='trip-details'
                class='w-full lg:border-l-4 border-green-900'
              >
                <a href='/trips/{{trip.id}}'>
                  <h2
                    class='mx-0 py-2 text-center text-4xl font-bold border-b-4 border-green-900 bg-gradient-to-r from-brown-800 via-brown-500 to-brown-800'
                  >{{trip.name}}</h2>
                </a>
                <p class='pl-2 pt-2'>{{trip.description}}</p>
                {{#if trip.taggeds.length}}
                  <div>
                    <p class='pl-2 pt-2 text-lg text-lime-500 underline'>Tagged
                      friends on this trip were:</p>
                    <div class='flex gap-x-2 justify-center'>
                      {{#each trip.taggeds as |friend|}}
                        <div id='avatar' class='flex content-center'>
                          <a
                            href='/profile/{{friend.user_id}}'
                            class='flex flex-col self-center'
                          >
                            <img
                              src='{{friend.user.profile_image}}'
                              class='flex flex-none w-24 h-24 lg:w-30 lg:h-30 self-center rounded-full shadow-lg border-2 border-green-900 mt-2'
                              alt='{{friend.user.image_name}}'
                            />
                            <h2
                              class='text-black text-center text-font-bold'
                            >{{friend.user.name}}</h2>
                          </a>

                        </div>
                      {{/each}}
                    </div>
                  </div>
                {{/if}}
              </div>
            </div>
          {{/each}}
        {{/if}}

        {{#if taggeds.length}}
          <p class='pl-2 pt-2 text-lg text-lime-500 underline'>You can view my
            trips with friends here:</p>
          <div class='flex gap-x-4 px-4'>
            {{#each taggeds as |member|}}
              <div id='avatar' class='flex content-center'>
                <a href='/trips/{{member.trip_id}}'>
                  <img
                    src='{{getImage member.trip.images}}'
                    class='rounded shadow-lg sm:w-20 md:w-30 lg:w-50 border-2 border-green-900'
                    alt='Trip Photo of {{member.trip.name}}'
                  />
                  <h2
                    class='text-black text-font-bold mb-2'
                  >{{member.trip.name}}</h2>
                </a>
              </div>
            {{/each}}
          </div>
        {{/if}}
      </div>
    </div>
  </div>
  {{#if owner}}
    <div id='TripCreate' class='flex w-full pt-10 place-content-center'>
      <a href='/tripcreate'>
        <div
          class='flex grow-0 shrink-1 basis-1/12 px-2 rounded-3xl border-2 border-green-900 bg-lime-100'
        >Create A New Trip</div>
      </a>
    </div>
  {{/if}}
</div>

<script src='/js/profile.js'></script>