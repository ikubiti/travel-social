<div class='bg-orange-200'>
  <div class='flex justify-center items-center h-screen bg-slate-200'>
    <div
      id='form'
      class='block bg-slate-50 p-6 bg-gradient-to-r from-green-800 via-green-600 to-lime-600 rounded-xl shadow-md shadow-slate-300 w-90'
    >
      <form class='signup-form'>
        <h2 class='text-lime-400 text-3xl font-semibold my-4'>Register</h2>
        <!-- full name -->
        <div id='fullName' class='flex flex-row'>
          <!-- first name -->
          <div id='firstName' class='w-1/2 mr-1'>
            <label for='fname' class='text-sm text-lime-400'>First Name</label><br
            />
            <input
              type='text'
              name='firstName'
              id='fname'
              class='h-8 w-full rounded-md border text-sm pl-2 outline-lime-600 shadow-sm'
              placeholder='First Name'
              required
            />
          </div>
          <!-- last name -->
          <div id='lastName' class='w-1/2 mr-1'>
            <label for='lname' class='text-sm text-lime-400'>Last Name</label><br
            />
            <input
              type='text'
              name='lastName'
              id='lname'
              class='h-8 w-full rounded-md border text-sm pl-2 outline-lime-600 shadow-sm'
              placeholder='Last Name'
              required
            />
          </div>
        </div>

        <!-- username -->
        <label for='username' class='text-sm text-lime-400'>Username</label><br
        />
        <input
          type='text'
          name='username'
          id='username'
          class='h-8 w-full rounded-md border text-sm pl-2 outline-lime-600 shadow-sm'
          placeholder='Username'
          required
        />

        <!-- profile-picture -->
        <label for='avatar' class='text-sm text-lime-400'>Upload our Profile
          Picture</label><br />
        <input
          type='file'
          name='image'
          id='avatar'
          class='border-2 border-lime-400 bg-lime-400 text-white py-1 mt-2 w-full rounded-md hover:bg-transparent hover:text-lime-400 font-semibold'
          required
        /><br />

        <!-- email -->
        <label for='email' class='text-sm text-lime-400'>Email</label><br />
        <input
          type='email'
          name='email'
          id='email'
          class='h-8 w-full rounded-md border text-sm pl-2 outline-lime-600 shadow-sm'
          placeholder='Email'
          required
        />
        <!-- password -->
        <label for='password' class='text-sm text-lime-400'>Password</label><br
        />
        <input
          type='password'
          name='password'
          id='password'
          class='h-8 w-full rounded-md border text-sm pl-2 outline-lime-600 shadow-sm'
          placeholder='Password'
          required
        />
        <!-- confirm password -->
        <label for='confirmPassword' class='text-sm text-lime-400'>Confirm
          Password</label><br />
        <input
          type='password'
          name=''
          id='confirmPassword'
          class='h-8 w-full rounded-md border text-sm pl-2 outline-lime-600 shadow-sm'
          placeholder='Password'
          required
        />
        <!-- Sign up / submit button -->
        <input
          type='submit'
          name=''
          id='signUp'
          class='border-2 border-lime-400 bg-lime-400 text-white py-1 mt-2 w-full rounded-md hover:bg-transparent hover:text-lime-400 font-semibold'
          required
        /><br />
        <p class='text-xs text-yellow-400 my-2'>Already have a account?
          <a href='/login' class='text-yellow-400'>Login</a></p>
      </form>
    </div>
  </div>
</div>
<script src='js/registration.js'></script>